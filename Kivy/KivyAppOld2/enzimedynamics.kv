<GraphNode>:
    # do_scale: False
    # do_rotation: False

    text: self.name + '\n     '+ str(self.c)
    color: 0.3, 0.5, 0.6, 0.8
	size_hint: None,None
	size: self.size
    size: 100, 100
    font_size: 15
    bold: True
    canvas.before:
        Color:
        	rgba: .9,.9,.9,1

        Ellipse:
        	size: self.size
        	pos: self.pos
        	#source: 'img/node.png'

<NodePopup>:
	size_hint: .9,None
	title: 'PLEASE WRITE THE COMPOUND NAME AND CONCENTRATION'

<ReactionPopup>:
	size_hint: .9,None
	title: 'PLEASE ADD INFO'

<ResultPopup>:
	size_hint: .9,.9
	title: 'SIMULATION RESULTS'

<Reaction>:
	text: self.boxText
	color: 0.9,0.9,0.2,0.7
	bold: True
	size_hint: None,None
	size: 50,20
	pos: self.boxPosition







